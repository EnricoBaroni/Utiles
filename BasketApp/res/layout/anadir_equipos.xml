<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
       	android:id="@+id/txtResultadoAnadirEquipo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/jugadores_title"
        android:gravity="center" 
        android:textColor="@color/version_bkgrd"/>
   
		<EditText 
		    	android:id="@+id/etAnadirEquipo"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:inputType="text" />
				
		<Button
               android:id="@+id/botonAnadirNuevoEquipo"
               android:layout_width="130dp"
               android:layout_height="wrap_content"
               android:text="@string/anadir_button"               
			   android:onClick="insertarRegistro"
               android:textColor="@color/background_color" />
</LinearLayout>
