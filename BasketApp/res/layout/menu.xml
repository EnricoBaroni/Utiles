<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"     
    android:background="@color/background_color">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_title" 
        android:textColor="@color/version_bkgrd"/>
     <!--android:listSelector -> Color que sale al clickar el boton del menu, tambien puede ponerse una imagen y sale por debajo de las letras -->
     <!--android:divider -> Dibujo que sale para dividir los elementos del menu, puede ser una imagen -->
     <ListView
        android:layout_height="wrap_content"
        android:id="@+id/ListView_Menu"
        android:layout_width="fill_parent"
        android:divider="@drawable/selector"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/RelativeLayout01"></ListView>
    <ImageView
        android:id="@+id/ImageView_MenuBottom"
        android:src="@drawable/portalcake"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"></ImageView>
   
</LinearLayout>