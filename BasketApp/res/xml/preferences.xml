<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="simple">
        <CheckBoxPreference
            android:key="confirm_roll"
            android:title="confirm_roll"
            android:summary="confirm_roll_desc" />
        <EditTextPreference
            android:key="story_teller"
            android:title="story_teller"
            android:summary="story_teller_desc"
            android:dialogTitle="story_teller_dialog_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="advanced">
        <ListPreference
            android:key="roll_mode"
            android:title="roll_mode"
            android:summary="roll_mode_desc"
            android:dialogTitle="roll_mode_dialog_title"
            android:entries="@array/roll_mode"
            android:entryValues="@array/mode" />
    </PreferenceCategory>
</PreferenceScreen>
